{
    "editor.minimap.enabled": false, // 字体
    "editor.formatOnSave": true,
    "C_Cpp.clang_format_fallbackStyle": "Chromium",
    "todohighlight.isEnable": true,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "markdown-preview-enhanced.previewTheme": "monokai.css",
    "CppHelper.SourceNotFoundBehavior": "Create source file",
    "CppHelper.SourcePattern": [
        "{FILE}.inl",
        "{FILE}.cpp",
        "{FILE}.cxx",
        "{FILE}.cc",
        "{FILE}.cp",
        "{FILE}.c",
        "/src/{FILE}.inl",
        "/src/{FILE}.cpp",
        "/src/{FILE}.cxx",
        "/src/{FILE}.cc",
        "/src/{FILE}.cp",
        "/src/{FILE}.c",
        "/source/{FILE}.inl",
        "/source/{FILE}.cpp",
        "/source/{FILE}.cxx",
        "/source/{FILE}.cc",
        "/source/{FILE}.cp",
        "/source/{FILE}.c"
    ],
    "Lua.telemetry.enable": false,
    "debug.onTaskErrors": "showErrors",
    "timeline.excludeSources": [
        "timeline.localHistory"
    ],
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.smoothScrolling": true,
    "workbench.list.smoothScrolling": true,
    "editor.suggest.preview": true,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "diffEditor.renderSideBySide": false,
    "files.autoGuessEncoding": true,
    "editor.mouseWheelZoom": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.wordWrap": "on",
    "window.dialogStyle": "custom",
    "debug.showBreakpointsInOverviewRuler": true,
    "workbench.iconTheme": "material-icon-theme",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "editor.fontSize": 16,
    "terminal.integrated.localEchoStyle": "dim",
}
